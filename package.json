{
  "name": "codelab",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "@codelab/sdk",
    "@codelab/job-hunt",
    "@codelab/ui",
    "@codelab/hooks",
    "@codelab/lib",
    "@codelab/api-errors",
    "@codelab/validations",
    "@codelab/types",
    "@codelab/rollup-config",
    "@codelab/tailwind-config",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --filter=job-hunt-api",
    "serve": "turbo run serve --filter=job-hunt-api",
    "lint": "turbo run lint",
    "ladle": "turbo run ladle",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release:ui": "turbo run build --filter=@codelab/ui^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
